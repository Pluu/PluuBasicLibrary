<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pluu.pluubasiclibrary">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BaseMaterialAppTheme"
		android:name=".AppController">
        <activity android:name=".MaterialMainActivity">
			<!-- Google Play Services -->
			<meta-data
				android:name="com.google.android.gms.version"
				android:value="@integer/google_play_services_version"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <!-- <category android:name="android.intent.category.LAUNCHER"/> -->
            </intent-filter>
        </activity>
        <activity
            android:name=".pluu.AppInfoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_app_info">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="PLUU_SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".android.RecyclerViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_recycler_view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="PLUU_SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".pluu.CardViewBuilderActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_card_view_builder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="PLUU_SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".pluu.ResourceViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_resource_viewer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="PLUU_SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".pluu.ResourceDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_resource_detail"/>
        <activity
            android:name=".pluu.SimpleToastActivity"
            android:label="@string/title_activity_simple_toast">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="PLUU_SAMPLE_CODE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
